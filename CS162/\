#include <iostream>

const double BURGER_COST = 11.75;
const double FRY_COST = 3.49;
const double SHAKE_COST = 5.65;
const double SODA_COST = 2.99;

struct menu_items
{
	int burger_qty;// = 0;
	int fry_qty;// = 0;
	int shake_qty;// = 0; 
	int soda_qty;// = 0;
	double tab_ttl;// = 0.0;
};

using namespace std;

int newtab (menu_items tab_number[100], int current_tab)
{
	cout << "Enter a new tab" << endl;
	
	cout << "Burgers are " << BURGER_COST << " each. How many would you like?: ";
	cin >> tab_number[current_tab].burger_qty;
	cout << tab_number[current_tab].burger_qty << " burgers at " << BURGER_COST << ", ";
	cout << "charge = $" << tab_number[current_tab].burger_qty * BURGER_COST << endl;

	cout << "Fries are " << FRY_COST << " each. How many would you like?: ";
	cin >> tab_number[current_tab].fry_qty;
	cout << tab_number[current_tab].fry_qty << " fries at " << FRY_COST << ", ";
	cout << "charge = $" << tab_number[current_tab].fry_qty * FRY_COST << endl;

	cout << "Shakes are " << SHAKE_COST << " each. How many would you like?: ";
	cin >> tab_number[current_tab].shake_qty;
	cout << tab_number[current_tab].shake_qty << " shakes at " << SHAKE_COST << ", ";
	cout << "charge = $" << tab_number[current_tab].shake_qty * SHAKE_COST << endl;

	cout << "Sodas are " << SODA_COST << " each. How many would you like?: ";
	cin >> tab_number[current_tab].soda_qty;
	cout << tab_number[current_tab].soda_qty << " soda at " << SODA_COST << ", ";
	cout << "charge = $" << tab_number[current_tab].soda_qty * SODA_COST << endl;
	
	tab_number[current_tab].tab_ttl = (tab_number[current_tab].burger_qty + BURGER_COST) + (tab_number[current_tab].fry_qty + FRY_COST) + (tab_number[current_tab].shake_qty + SHAKE_COST) + (tab_number[current_tab].soda_qty + SODA_COST); 
	cout << "Tab total = " << tab_number[current_tab].tab_ttl << endl;

	return 0;
}

int main ()
{
	char user_choice = 0;
	int current_tab = 0;
	menu_items tab_number [100];

	cout << "Welcome to Jackrabbit Slim's " << endl;
	
	while (user_choice != 'q')
	{	
		cout << "What would you like to do: (e)nter a new tab, (v)eiw previous tab, or (q)uit? " << endl;
		cin >> user_choice; 
		cout << "user_choice = " << user_choice << endl;

		if (user_choice == 'e')
//			cout << "New Tab" << endl;
			newtab(tab_number, current_tab);
		else if (user_choice == 'v')
			cout << "View Tab" << endl;
		else if (user_choice == 'q')
			cout << "Exit" << endl;	
		else 
			cout << "You did not enter a valid selection, try again... " << endl;

	} // closes menu
	return 0;
} // closes main
