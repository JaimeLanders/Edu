{
	int torpDmg;
	cout << "Firing Torpedo..." << endl;
	torpDmg = 50;
	cout << "Torpedo did " << torpDmg << " damage. " << endl;
	torpShot++;
//	return// torpedoDmg;
	currentHp -= torpDmg;
